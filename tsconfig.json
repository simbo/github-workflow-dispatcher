{
  "compilerOptions": {
    "baseUrl": "./src",
    "esModuleInterop": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noImplicitAny": false,
    "outDir": "./dist",
    "removeComments": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ESNext",
    "strict": true
  },
  "include": ["src/**/*"]
}
